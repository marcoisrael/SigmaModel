noprefix "false"

\end_inset

, suponiendo un hamiltonaino 
\begin_inset Formula $\hat{\mathcal{H}}=\hat{H}_{0}+\hat{V}$
\end_inset

, 
\begin_inset Formula 
\begin{equation}
i\hbar\dv{t}K\left(q,q';t\right)=\hat{H}K\left(q,q';t\right),
\end{equation}

\end_inset

donde 
\begin_inset Formula $\hat{H}_{0}=\frac{1}{2m}\sum\hat{p}_{i}^{2}$
\end_inset

.
 
\end_layout

\begin_layout Standard
Partiendo de la forma general del propagador
\begin_inset Formula 
\begin{equation}
K\left(q,q';t\right)=\mel**{q'}{\mathrm{e}^{-i\hbar t\left(\hat{H}_{0}+\hat{V}\right)}}{q}.
\end{equation}

\end_inset

Aplicando el teorema de Trotter 
\begin_inset Formula 
\begin{equation}
K\left(q,q';t\right)=\lim_{n\rightarrow\infty}\mel**{q'}{\left(\mathrm{e}^{-i\hbar t\hat{\mathcal{H}}_{0}/n}\mathrm{e}^{-i\hbar t\hat{V}/n}\right)^{n}}{q},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
K\left(q,q';t\right)=\lim_{n\rightarrow\infty}\int\prod_{j=0}^{n-1}\mel**{q_{j+1}}{\mathrm{e}^{-i\hbar t\hat{\mathcal{H}}_{0}/n}\mathrm{e}^{-i\hbar t\hat{V}/n}}{q_{j}}\dd q_{1}\dots\dd q_{n-1},\label{eq:amplitud_probabilidad_lim}
\end{equation}

\end_inset

En cada factor del productorio se tiene el hamitoniano para una partícula
 libre, aplicando la ec.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:amplitud_probabilidad_clasica"
plural "false"
caps "false"
noprefix "false"

\end_inset

 a ec.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:amplitud_probabilidad_lim"
plural "false"
caps "false"
noprefix "false"

\end_inset

 se tiene
\begin_inset Formula 
\begin{align}
K\left(q,q';t\right)= & \lim_{n\rightarrow\infty}\int\left(\frac{m}{2\pi ia}\right)^{n/2}\times\nonumber \\
 & \exp\left\{ ia\sum_{j=0}^{n-1}\left[\frac{m}{2}\left(\frac{q_{j+1}-q_{j}}{a}\right)^{2}-V\left(q_{j}\right)\right]\right\} \dd q_{1}\dots\dd q_{n-1},
\end{align}

\end_inset

donde 
\begin_inset Formula $a=t/n$
\end_inset

 y 
\begin_inset Formula $\hbar=1$
\end_inset

.
 Observado que la suma corresponde la integral de Riemann de la acción en
 el límite
\begin_inset Formula 
\begin{equation}
\lim_{n\rightarrow\infty}\sum_{j=0}^{n-1}a\left[\frac{m}{2}\left(\frac{q_{j+1}-q_{j}}{a}\right)^{2}-V\left(q_{j}\right)\right]=\int_{0}^{t}\left[\frac{m}{2}\left(\dv{q}{t'}\right)-V\left(q(t')\right)\right]\dd{t'}.\label{eq:lim_lagrangian}
\end{equation}

\end_inset

Finalmente el propagador se describe por la ecuación
